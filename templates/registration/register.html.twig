{% extends 'base.html.twig' %}

{% block title %}{{ ('user.register'|trans) }}{% endblock %}

{% block body %}
    <h1 class="w3-card-4 w3-padding-16">{{ ('user.register'|trans) }}</h1>

    {% for flashError in app.flashes('verify_email_error') %}
        <div class="alert alert-danger" role="alert">{{ flashError }}</div>
    {% endfor %}

    {{ form_start(registrationForm, {
        attr: {class: 'w3-left-align w3-container w3-card-4 w3-padding-16 w3-white'}
    }) }}
    {{ form_row(registrationForm.login, {
        label: ('form.login.login'|trans),
        row_attr: {class: 'w3-section'},
        attr: {class: 'big-field w3-input'}
    }) }}
    {{ form_row(registrationForm.plainPassword, {
        label: ('form.login.password'|trans),
        row_attr: {class: 'w3-section'},
        attr: {class: 'big-field w3-input'}
    }) }}
    {{ form_row(registrationForm.email, {
        label: ('form.login.email'|trans),
        row_attr: {class: 'w3-section'},
        attr: {class: 'big-field w3-input'}
    }) }}

    <button type="submit" class="w3-button w3-theme">
        {{ ('user.register'|trans) }}
    </button>
    {{ form_end(registrationForm) }}
{% endblock %}
